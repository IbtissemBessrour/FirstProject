{% extends 'base.html.twig' %}
{% block body %}
{% if Authors is empty %}
<p>il n'y a plus de produit</p>
{% else %}
<table border="1"> 
<tr>
    <th>id</th>
    <th>picture</th>
    <th>username</th>
    <th>email</th>
    <th>nb_books</th>
    <th>details</th>
    <th>update</th>
</tr>
    {% set nb_books_tot = 0 %}
    {% for author in Authors %}
