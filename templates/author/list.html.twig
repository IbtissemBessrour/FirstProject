            <td><img src="{{asset(author.picture)}}" alt"Taha_Hussein" width='100px' height='100px' /></td>
            <td>{{ author.username | upper }}</td>
            <td>{{ author.email }}</td>
            <td>{{ author.nb_books }}</td>
            <td><a href={{path('detail',{id:author.id})}}>DÃ©tails</a></td>
